<launch>
  <arg name="use_sim_time" default="true" />
  <arg name="gui" default="true" />
  <arg name="world" default="L-shape-1.6m" />

  <param name="/use_sim_time" value="$(arg use_sim_time)" />
  <node name="gazebo" pkg="gazebo_ros" type="gzserver" args="$(find train_world)/worlds/$(arg world)-with-mapping.world" respawn="false" output="screen" launch-prefix="$(optenv OPTIRUN_LAUNCH_PREFIX)" />
  <group if="$(arg gui)">
    <node name="gazebo_gui" pkg="gazebo_ros" type="gzclient" respawn="false" output="screen" launch-prefix="$(optenv OPTIRUN_LAUNCH_PREFIX)" />
  </group>
</launch>