<package format="2">
  <name>stop_base</name>
  <version>0.3.7</version>
  <description>
    Stop base controller for any robot using the cmd_vel interface.
  </description>
  <maintainer email="jack.oquin@gmail.com">Jack O'Quin</maintainer>
  <author>Jack O'Quin</author>
  <license>BSD</license>  

  <url type="website">http://wiki.ros.org/stop_base</url>
  <url type="repository">https://github.com/utexas-bwi/bwi_common.git</url>
  <url type="bugtracker">https://github.com/utexas-bwi/bwi_common/issues</url>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>roslint</build_depend>
  <depend>bwi_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>python-catkin-pkg</depend>
  <exec_depend>rospy</exec_depend>

  <test_depend>rostest</test_depend>
  <test_depend>rosunit</test_depend>

  <export>
    <rosdoc config="rosdoc.yaml" />
  </export>

</package>
