# EditorConfig manages code style settings across
# various text editors : https://EditorConfig.org

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*{.cpp,h}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab


[{.travis.yml}]
indent_style = space
indent_size = 2
